<div id="sign-up">
  <p>Already have an account? <a href="/login">log-in!</a></p>
  <h3>Sign-up to start tracking!</h3>
  <form class="needs-validation" onsubmit="return createUser(event)">
    <div class="form-group">
      <label for="validationCustom01">Name</label>
      <input name="name" type="text" class="form-control" id="validationCustom01" placeholder="Enter your name" value="" required>
      <div class="valid-feedback">
        Looks good!
      </div>
    </div>
    <div class="form-group">
      <label for="exampleInputEmail1">Email address</label>
      <input name="email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="your@email.com" required>
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Password</label>
      <input name="password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" required>
    </div>
    <div class="form-group">
      <label for="age">Age</label>
      <input name="age" type="number" class="form-control" id="age" placeholder="Age" min="1" max="128" required>
    </div>
    <div class="form-check">
      <input type="checkbox" class="form-check-input" id="exampleCheck1" value="" required>
      <label class="form-check-label" for="exampleCheck1">I have read and accept the Terms of Service</label>
    </div>
    <button type="submit" class="btn btn-primary">Get Started!</button>
  </form>
</div>
<script src="/scripts/signup.js"></script>